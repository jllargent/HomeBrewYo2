<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.bsu.cs222.cnj.homebrewyo2.BrixtonPorterIngredients"
    android:background="#d3af60">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ingredients"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Malts"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Pale | 8.4lb"
        android:id="@+id/radioButton"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hops"
        android:id="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton13" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roasted Barley | 0.69lb"
        android:id="@+id/radioButton5"
        android:checked="false"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/radioButton23" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black | 0.28lb"
        android:id="@+id/radioButton6"
        android:checked="false"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amber | 0.69lb"
        android:id="@+id/radioButton7"
        android:checked="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yeast"
        android:id="@+id/textView12"
        android:layout_above="@+id/radioButton"
        android:layout_toEndOf="@+id/radioButton5" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyeast 1056 - American Ale"
        android:id="@+id/radioButton12"
        android:checked="false"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flaked Oats | 0.55lb"
        android:id="@+id/radioButton13"
        android:checked="false"
        android:layout_below="@+id/radioButton7"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Crystal | 0.41lb"
        android:id="@+id/radioButton23"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challanger | 12.5g | Middle"
        android:id="@+id/radioButton25"
        android:checked="false"
        android:layout_below="@+id/radioButton26"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bramling Cross | 12.5g | Middle"
        android:id="@+id/radioButton26"
        android:checked="false"
        android:layout_below="@+id/radioButton27"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bravo | 12.5g | Start"
        android:id="@+id/radioButton27"
        android:checked="false"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

</RelativeLayout>
