<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.bsu.cs222.cnj.homebrewyo2.RecipesStylesActivity"
    android:background="#d3af60">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stylesbutton"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_marginTop="54dp"
        android:src="@drawable/ale"
        android:background="#00ffffff"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:onClick="goAleStyleRecipes"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/amberale"
        android:background="#00ffffff"
        android:layout_alignBottom="@+id/imageButton3"
        android:layout_alignParentEnd="true"
        android:onClick="goAmberAleStyleRecipes"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/ipa"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="goIPAStyleRecipes"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/lager"
        android:background="#00ffffff"
        android:layout_alignBottom="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton4"
        android:onClick="goLagerStyleRecipes"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/paleale"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton8"
        android:src="@drawable/porter"
        android:background="#00ffffff"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/stout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:background="#00ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/wheatbeer"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignStart="@+id/imageButton8"
        android:background="#00ffffff" />
</RelativeLayout>
