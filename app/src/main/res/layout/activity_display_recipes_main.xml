<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.bsu.cs222.cnj.homebrewyo2.DisplayRecipesMain"
    android:background="#d3af60">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/recipes"
        android:background="#00ffffff"
        android:text="Sort Recipes By"
        android:textColor="#000000"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style"
        android:onClick="goRecipeList"
        android:id="@+id/styleButton"
        android:layout_below="@+id/nameButton"
        android:background="#d3af60"
        android:layout_alignEnd="@+id/durationButton"
        android:layout_alignStart="@+id/durationButton"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:onClick="goRecipeList"
        android:id="@+id/nameButton"
        android:background="#d3af60"
        android:textSize="20dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/styleButton"
        android:layout_alignEnd="@+id/styleButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration In Minutes"
        android:onClick="goRecipeList"
        android:id="@+id/durationButton"
        android:layout_below="@+id/styleButton"
        android:layout_centerHorizontal="true"
        android:background="#d3af60" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IBU Value"
        android:onClick="goRecipeList"
        android:id="@+id/ibuButton"
        android:layout_below="@+id/durationButton"
        android:background="#d3af60"
        android:layout_alignEnd="@+id/durationButton"
        android:layout_alignStart="@+id/durationButton"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABV Percent"
        android:onClick="goRecipeList"
        android:id="@+id/abvButton"
        android:layout_below="@+id/ibuButton"
        android:background="#d3af60"
        android:layout_alignStart="@+id/ibuButton"
        android:layout_alignEnd="@+id/ibuButton"
        android:textSize="20dp" />

</RelativeLayout>
