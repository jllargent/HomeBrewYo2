<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.bsu.cs222.cnj.homebrewyo2.RiptideIngredients"
    android:background="#d3af60">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ingredients"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Malts"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caramalt | 1.2lb"
        android:id="@+id/radioButton"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hops"
        android:id="@+id/textView10"
        android:layout_below="@+id/radioButton32"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Columbus | 14.3g | Start"
        android:id="@+id/radioButton5"
        android:checked="false"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galena | 14.3g | Start"
        android:id="@+id/radioButton6"
        android:checked="false"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galena | 21.4g | Start"
        android:id="@+id/radioButton7"
        android:checked="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yeast"
        android:id="@+id/textView12"
        android:layout_below="@+id/imageView9"
        android:layout_toEndOf="@+id/radioButton7" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyeast 1272 - American Ale II"
        android:id="@+id/radioButton12"
        android:checked="false"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cascade | 21.4g | End"
        android:id="@+id/radioButton13"
        android:layout_below="@+id/radioButton7"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Columbus | 21.4g | End"
        android:id="@+id/radioButton14"
        android:layout_below="@+id/radioButton13"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Pale - Maris Otter | 11.8lb"
        android:id="@+id/radioButton24"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Crystal 350-400 | 1.6lb"
        android:id="@+id/radioButton28"
        android:layout_below="@+id/radioButton24"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carafa Special Malt Type 3 | 0.4lb"
        android:id="@+id/radioButton29"
        android:layout_below="@+id/radioButton28"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate | 0.6lb"
        android:id="@+id/radioButton30"
        android:layout_below="@+id/radioButton29"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wheat | 0.8lb"
        android:id="@+id/radioButton31"
        android:layout_below="@+id/radioButton30"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flaked Oats | 1.2lb"
        android:id="@+id/radioButton32"
        android:checked="false"
        android:layout_below="@+id/radioButton31"
        android:layout_alignEnd="@+id/radioButton30" />


</RelativeLayout>
