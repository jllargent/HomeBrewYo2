<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.bsu.cs222.cnj.homebrewyo2.MainActivity"
    android:background="#d3af60">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/logosmall"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/recipeButton"
        android:src="@drawable/freebeer"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:onClick="goRecipes"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/timerButton"
        android:layout_below="@+id/recipeButton"
        android:src="@drawable/stopwatch"
        android:layout_alignStart="@+id/recipeButton"
        android:layout_marginTop="56dp"
        android:background="#00ffffff"
        android:onClick="goTimers"/>
</RelativeLayout>
