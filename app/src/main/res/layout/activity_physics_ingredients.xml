<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.bsu.cs222.cnj.homebrewyo2.PhysicsIngredients"
    android:background="#d3af60">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ingredients"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Malts"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Pale | 8.95lb"
        android:id="@+id/radioButton"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caramalt | 0.69lb"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crystal 120 | 0.5lb"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Cyrstal 350 | 0.2lb"
        android:id="@+id/radioButton4"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hops"
        android:id="@+id/textView10"
        android:layout_below="@+id/radioButton4"
        android:layout_alignEnd="@+id/textView9" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amarillo | 25g | Start"
        android:id="@+id/radioButton5"
        android:checked="false"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amarillo | 12.5g | Middle"
        android:id="@+id/radioButton6"
        android:checked="false"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bramling Cross | 12.5g | End"
        android:id="@+id/radioButton7"
        android:checked="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yeast"
        android:id="@+id/textView12"
        android:layout_below="@+id/imageView9"
        android:layout_toEndOf="@+id/radioButton4" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyeast 1056 - American Ale"
        android:id="@+id/radioButton12"
        android:checked="false"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amarillo | 50g | End"
        android:id="@+id/radioButton13"
        android:layout_below="@+id/radioButton7"
        android:layout_alignEnd="@+id/radioButton2" />

</RelativeLayout>
